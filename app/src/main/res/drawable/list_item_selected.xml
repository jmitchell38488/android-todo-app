<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/grey_333333_30"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="3dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="5dp"/>
            <solid android:color="@color/listitem_highlight"/>
            <stroke android:width="1dp" android:color="@color/listitem_highlight" />
        </shape>
    </item>
</layer-list>