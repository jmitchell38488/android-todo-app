<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ListThemeLogo" parent="@android:style/TextAppearance">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/logo</item>
        <item name="android:textSize">34dp</item>
    </style>

    <style name="FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginTop">@dimen/fab_margin</item>
        <item name="android:layout_marginLeft">@dimen/fab_margin</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ListThemeDialog.Input.TextArea" parent="ListThemeDialog.Input">
        <item name="android:minLines">3</item>
        <item name="android:maxLines">10</item>
        <item name="android:lines">3</item>
    </style>

    <style name="ListThemeListFragment" parent="AppTheme">
        <item name="android:layout_marginTop">56dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

</resources>