<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ListThemeLogo" parent="@android:style/TextAppearance">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/logo</item>
        <item name="android:textSize">34dp</item>
    </style>

    <style name="ListThemeDialog.Logo" parent="ListThemeLogo">
        <item name="android:background">@color/grey_f5f5f5_100</item>
        <item name="android:textSize">22dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginTop">@dimen/fab_margin</item>
        <item name="android:layout_marginLeft">@dimen/fab_margin</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ListThemeDialog.Input" parent="@android:style/TextAppearance">
        <item name="android:gravity">top|left</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/grey_555555_100</item>
    </style>

    <style name="ListThemeDialog.Input.TextArea" parent="ListThemeDialog.Input">
        <item name="android:minLines">2</item>
        <item name="android:maxLines">10</item>
        <item name="android:lines">2</item>
    </style>

    <style name="ListThemeListContainer" parent="AppTheme">
        <item name="android:background">@color/grey_efefef_100</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="ListThemeDialog.Label" parent="@android:style/TextAppearance">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/grey_333333_100</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="ListThemeDialog.Label.Small" parent="@android:style/TextAppearance">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/grey_333333_100</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="ListThemeDialog.Switch" parent="@android:style/TextAppearance">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/grey_333333_100</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:thumbTextPadding">10dp</item>
        <item name="android:switchMinWidth">100dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="AppTheme.ListTextView.Large" parent="AppTheme.ListTextView">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@drawable/list_selector_text</item>
    </style>

    <style name="AppTheme.ListTextView.Icon.List" parent="@android:style/TextAppearance">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_width">20dp</item>
    </style>

</resources>