<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppThemeBase">
        <item name="android:datePickerDialogTheme">@style/DatePickerDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerDialogTheme</item>
    </style>

    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:tint">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="@style/AppTheme.ActionBarStyleBase">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="AlertDialogTheme" parent="AlertDialogThemeBase">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:selectableItemBackground">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="DatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:datePickerDialogTheme">@style/DatePickerDialogTheme</item>
        <item name="android:headerBackground">@color/actionbar_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/actionbar_light</item>
        <item name="android:colorAccent">@color/actionbar_light</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="android:calendarTextColor">@color/colorPrimaryDark</item>
        <item name="android:dayOfWeekBackground">@color/colorPrimaryDark</item>
        <item name="android:yearListSelectorColor">@color/actionbar_light</item>
    </style>

    <style name="TimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:timePickerDialogTheme">@style/TimePickerDialogTheme</item>
        <item name="android:headerBackground">@color/actionbar_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:numbersBackgroundColor">@color/white</item>
        <item name="android:timePickerMode">spinner</item>
        <item name="colorAccent">@color/actionbar_light</item>
        <item name="android:colorAccent">@color/actionbar_light</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="android:calendarTextColor">@color/colorPrimaryDark</item>
        <item name="android:dayOfWeekBackground">@color/colorPrimaryDark</item>
        <item name="android:yearListSelectorColor">@color/actionbar_light</item>
    </style>

