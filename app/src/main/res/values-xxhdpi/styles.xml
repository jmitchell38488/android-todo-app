<resources>

    <style name="AppTheme.ListTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@drawable/list_selector_text</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="AppTheme.ListTextView.Icon" parent="@android:style/TextAppearance">
        <item name="android:textSize">12dp</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:textColor">@color/actionbar_dark_50</item>
    </style>

    <style name="AppTheme.ListTextView.Large" parent="AppTheme.ListTextView">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@drawable/list_selector_text</item>
    </style>

    <style name="AppTheme.ListTextView.Large.Section" parent="AppTheme.ListTextView">
        <item name="android:textSize">20dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/grey_757575_100</item>
    </style>

    <style name="ListThemeLogo" parent="@android:style/TextAppearance">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/logo</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="ListThemeDialog.Logo" parent="ListThemeLogo">
        <item name="android:background">@color/grey_f5f5f5_100</item>
        <item name="android:textSize">26dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="ListThemeDialog.Label" parent="@android:style/TextAppearance">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/grey_333333_100</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="ListThemeDialog.Label.Small" parent="@android:style/TextAppearance">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/grey_333333_100</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="ListThemeDialog.Switch" parent="@android:style/TextAppearance">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/grey_333333_100</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:thumbTextPadding">10dp</item>
        <item name="android:switchMinWidth">100dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="ListThemeDialog.Input" parent="@android:style/TextAppearance">
        <item name="android:gravity">top|left</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/grey_555555_100</item>
    </style>

    <style name="ListThemeDialog.Input.TextArea" parent="ListThemeDialog.Input">
        <item name="android:minLines">5</item>
        <item name="android:maxLines">10</item>
        <item name="android:lines">5</item>
    </style>

</resources>
